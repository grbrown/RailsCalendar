<!-- app/views/welcome/index.html.erb -->
<div class="w-80">
<h1 class='font-bold'>Schedule app</h1>

<% if current_user() %>

  <p >You are logged in as <%= current_user.email %>.</p>
  <div class="flex flex-col">
  <%= link_to 'Calendar', calendar_path, class:'btn-primary', method: :get %>
  <%= link_to 'Logout', logout_path, class:'btn-primary', method: :delete %>
  </div>
  <% else %>
  <div style='display:block'>
  <%= link_to 'Login', login_path , class:'btn-primary' %>
  </div>
  </div>
<% end %>